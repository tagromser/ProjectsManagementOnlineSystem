@using PMOS.UI.Web.Models.Worker
@model WorkerEditModel

@{
    ViewData["Title"] = "Редактирование данных о сотруднике";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование данных о сотруднике</h2>

<form id="main-form" asp-route-returnurl="@ViewData["ReturnUrl"]" asp-controller="Worker" asp-action="Edit" method="post">
    <input asp-for="Id" type="hidden">
    <input asp-for="IdUser" type="hidden">
    <div class="form-row">
        <div class="col-md-6">
            <!--Имя сотрудника-->
            <div class="form-group">
                <label asp-for="Name">Имя:</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Введите имя">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <!--Фамилия сотрудника-->
            <div class="form-group">
                <label asp-for="Surname">Фамилия:</label>
                <input type="text" class="form-control" asp-for="Surname" placeholder="Введите фамилию">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-6">
            <!--Отчество сотрудника-->
            <div class="form-group">
                <label asp-for="Patronymic">Отчество:</label>
                <input type="text" class="form-control" asp-for="Patronymic" placeholder="Введите отчество">
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <!--Почта сотрудника-->
            <div class="form-group">
                <label asp-for="Email">Почта:</label>
                <input type="text" class="form-control" asp-for="Email" placeholder="Введите почту">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Сохранить</button>
    </div>

    <div>
        <a asp-action="Index">Назад к списку</a>
    </div>
</form>

